{
  "name": "PDX-Roasters",
  "version": "0.1.0",
  "description": "Mapping all the coffee roasters in Portland",
  "repository": {
    "type": "git",
    "url": "https://github.com/twaddington/pdxroasters.git"
  },
  "license": "LicenseRef-LICENSE",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "js": "simplifyify js/src/*.js -b -m -o js/dist/",
    "sass": "node-sass sass/ --output-style compressed -q --include-path node_modules/ -o css/",
    "build": "parallelshell 'npm run js' 'npm run sass'",
    "prestart": "npm run sass",
    "start": "parallelshell 'npm run js -- -w -d' 'npm run sass -- -w'"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "node-sass": "^3.4.2",
    "parallelshell": "^2.0.0",
    "scss-utils": "^1.0.0",
    "simplifyify": "^2.0.1"
  },
  "dependencies": {
    "do-something-on-scroll": "^1.0.1",
    "form-serialize": "^0.7.0",
    "leaflet": "^0.7.7",
    "smoothscroll": "^0.2.2"
  }
}
